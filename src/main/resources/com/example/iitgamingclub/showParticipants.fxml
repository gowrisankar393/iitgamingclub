<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.iitgamingclub.controller.showParticipantsController" prefWidth="700" prefHeight="400">
    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10;">
        <Label text="View File:"/>
        <ComboBox fx:id="cmbFiles" onAction="#loadTable"/>
    </HBox>

    <TableView fx:id="tblParticipants" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colName" text="Name" prefWidth="120"/>
            <TableColumn fx:id="colGame" text="Game" prefWidth="100"/>
            <TableColumn fx:id="colSkill" text="Skill" prefWidth="50"/>
            <TableColumn fx:id="colRole" text="Role" prefWidth="100"/>
            <TableColumn fx:id="colType" text="Personality" prefWidth="100"/>
        </columns>
    </TableView>
</VBox>