<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootPane" prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: black;" stylesheets="@main.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.iitgamingclub.controller.showParticipantsController">
    <children>
        <ImageView blendMode="LIGHTEN" fitHeight="${rootPane.height}" fitWidth="${rootPane.width}" managed="false" preserveRatio="false"><image><Image url="@media/background.jpg" /></image><opacity>0.2</opacity></ImageView>
        <BorderPane>
            <top>
                <HBox alignment="CENTER_RIGHT" onMouseDragged="#handleMouseDragged" onMousePressed="#handleMousePressed" prefHeight="40.0" spacing="10.0" style="-fx-background-color: transparent;">
                    <padding><Insets left="15.0" right="15.0" /></padding>
                    <children>
                        <Button onMouseClicked="#handleMinimize" styleClass="window-btn" text="_" />
                        <Button onMouseClicked="#handleMaximize" styleClass="window-btn" text="[ ]" />
                        <Button onMouseClicked="#cancel" styleClass="window-btn-close" text="X" />
                    </children>
                </HBox>
            </top>
            <center>
                <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
               <Label text="&lt;&lt;&lt; ALL PARTICIPANTS &gt;&gt;&gt;" textFill="#cfff04">
                  <font>
                     <Font name="ROGFonts-Regular" size="49.0" />
                  </font>
               </Label>
                    <HBox alignment="CENTER_LEFT" spacing="10"><Label text="File:" textFill="white" /><ComboBox fx:id="cmbFiles" onAction="#loadTable" styleClass="combo-box-gamer" /></HBox>
                    <TableView fx:id="tblParticipants" prefHeight="508.0" prefWidth="1240.0" style="-fx-background-color: transparent; -fx-border-width: 1.5;" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colId" prefWidth="80" text="ID" />
                            <TableColumn fx:id="colName" prefWidth="200" text="Name" />
                            <TableColumn fx:id="colGame" prefWidth="150" text="Game" />
                            <TableColumn fx:id="colSkill" prefWidth="80" text="Skill" />
                            <TableColumn fx:id="colRole" prefWidth="150" text="Role" />
                            <TableColumn fx:id="colType" prefWidth="150" text="Type" />
                        </columns>
                        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                    </TableView>
               <Label />
                    <Button alignment="CENTER" maxWidth="150.0" minWidth="150.0" onAction="#cancel" prefHeight="39.0" prefWidth="150.0" style="-fx-border-width: 2.5;" styleClass="button-normal" text="Back">
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin></Button>
                </VBox>
            </center>
        </BorderPane>
    </children>
</StackPane>
