<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootPane" prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: black;" stylesheets="@main.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.iitgamingclub.controller.iitGamingClubController">
   <children>
      <ImageView blendMode="LIGHTEN" fitHeight="${rootPane.height}" fitWidth="${rootPane.width}" managed="false" preserveRatio="false"><image><Image url="@media/background.jpg" /></image><opacity>0.2</opacity></ImageView>
      <BorderPane>
         <top>
            <HBox alignment="CENTER_RIGHT" onMouseDragged="#handleMouseDragged" onMousePressed="#handleMousePressed" prefHeight="40.0" spacing="10.0" style="-fx-background-color: rgba(0,0,0,0.8); -fx-border-color: #333; -fx-border-width: 0 0 1 0;">
               <padding><Insets left="15.0" right="15.0" /></padding>
               <children>
                  <Label maxWidth="Infinity" text="IIT Gaming Club" textFill="#888888" HBox.hgrow="ALWAYS"><font><Font name="Consolas" size="14.0" /></font></Label>
                  <Button onMouseClicked="#handleMinimize" styleClass="window-btn" text="_" />
                  <Button onMouseClicked="#handleMaximize" styleClass="window-btn" text="[ ]" />
                  <Button onMouseClicked="#handleExit" styleClass="window-btn-close" text="X" />
               </children>
            </HBox>
         </top>
         <center>
            <VBox alignment="CENTER" maxWidth="600.0" spacing="20.0">
               <Label text="IIT Gaming Club" textFill="#cfff04"><font><Font name="ROGFonts-Regular" size="46.0" /></font></Label>
               <Button onAction="#goToAdd" prefHeight="50.0" prefWidth="400.0" styleClass="button-normal" text="Add Participant" />
               <Button onAction="#goToRemove" prefHeight="50.0" prefWidth="400.0" styleClass="button-normal" text="Remove Participant" />
               <Button onAction="#goToUpdate" prefHeight="50.0" prefWidth="400.0" styleClass="button-normal" text="Update Participant" />
               <Button onAction="#goToShow" prefHeight="50.0" prefWidth="400.0" styleClass="button-normal" text="Show All Participants" />
               <Button onAction="#handleImport" prefHeight="50.0" prefWidth="400.0" styleClass="button-normal" text="Import CSV" />
               <Button onAction="#goToGenerate" prefHeight="50.0" prefWidth="400.0" styleClass="button-generate" text="Generate Teams" />
               <Button onAction="#handleExit" prefHeight="50.0" prefWidth="400.0" styleClass="button-exit" text="Exit" />
            </VBox>
         </center>
      </BorderPane>
   </children>
</StackPane>