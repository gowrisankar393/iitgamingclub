<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootPane" prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: black;" stylesheets="@main.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.iitgamingclub.controller.iitGamingClubController">
   <children>

      <ImageView blendMode="LIGHTEN" fitHeight="${rootPane.height}" fitWidth="${rootPane.width}" managed="false" preserveRatio="false">
         <image>
            <Image url="@media/background.jpg" />
         </image>
         <opacity>0.2</opacity>
      </ImageView>

      <BorderPane>

         <top>
            <HBox alignment="CENTER_RIGHT" onMouseDragged="#handleMouseDragged" onMousePressed="#handleMousePressed" prefHeight="40.0" spacing="10.0" style="-fx-background-color: rgba(0,0,0,0; -fx-border-width: 0 0 1 0;">
               <padding>
                  <Insets left="15.0" right="15.0" />
               </padding>
               <children>
                  <Label maxWidth="Infinity" textFill="#888888" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="Consolas" size="14.0" />
                     </font>
                  </Label>

                  <Button onMouseClicked="#handleMinimize" styleClass="window-btn" text="_" textFill="WHITE" />
                  <Button onMouseClicked="#handleMaximize" styleClass="window-btn" text="[ ]" textFill="WHITE" />
                  <Button onMouseClicked="#handleExit" styleClass="window-btn-close" text="X" textFill="WHITE" />
               </children>
            </HBox>
         </top>

         <center>
            <VBox alignment="CENTER" maxWidth="692.0" spacing="25.0">
               <children>
                  <Label alignment="CENTER" prefHeight="66.0" prefWidth="499.0" text="IIT Gaming Club" textAlignment="CENTER" textFill="#cfff04">
                     <font>
                        <Font name="ROGFonts-Regular" size="46.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="30.0" />
                     </VBox.margin>
                  </Label>

                  <Button mnemonicParsing="false" onAction="#goToAdd" prefHeight="50.0" prefWidth="400.0" styleClass="button-normal" text="Add Participant" />
                  <Button mnemonicParsing="false" onAction="#goToRemove" prefHeight="50.0" prefWidth="400.0" styleClass="button-normal" text="Remove Participant" />
                  <Button mnemonicParsing="false" onAction="#goToUpdate" prefHeight="50.0" prefWidth="400.0" styleClass="button-normal" text="Update Participant" />
                  <Button mnemonicParsing="false" onAction="#goToShow" prefHeight="50.0" prefWidth="400.0" styleClass="button-normal" text="Show All Participants" />
                  <Button mnemonicParsing="false" onAction="#handleImport" prefHeight="50.0" prefWidth="400.0" styleClass="button-normal" text="Import Participant Files" />
                  <Button mnemonicParsing="false" onAction="#goToGenerate" prefHeight="50.0" prefWidth="400.0" styleClass="button-generate" text="Generate Teams" />
                  <Button mnemonicParsing="false" onAction="#handleExit" prefHeight="50.0" prefWidth="400.0" styleClass="button-exit" text="Exit" />
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</StackPane>
