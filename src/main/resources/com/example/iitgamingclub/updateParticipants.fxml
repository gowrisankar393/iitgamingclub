<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootPane" prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: black;" stylesheets="@main.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.iitgamingclub.controller.updateParticipantsController">
    <children>
        <ImageView blendMode="LIGHTEN" fitHeight="${rootPane.height}" fitWidth="${rootPane.width}" managed="false" preserveRatio="false"><image><Image url="@media/background.jpg" /></image><opacity>0.2</opacity></ImageView>
        <BorderPane>
            <top>
                <HBox alignment="CENTER_RIGHT" onMouseDragged="#handleMouseDragged" onMousePressed="#handleMousePressed" prefHeight="40.0" spacing="10.0" style="-fx-background-color: rgba(0,0,0,0.8); -fx-border-color: #333; -fx-border-width: 0 0 1 0;">
                    <padding><Insets left="15.0" right="15.0" /></padding>
                    <children>
                        <Label maxWidth="Infinity" text="Update Participant" textFill="#888888" HBox.hgrow="ALWAYS"><font><Font name="Consolas" size="14.0" /></font></Label>
                        <Button onMouseClicked="#handleMinimize" styleClass="window-btn" text="_" />
                        <Button onMouseClicked="#handleMaximize" styleClass="window-btn" text="[ ]" />
                        <Button onMouseClicked="#cancel" styleClass="window-btn-close" text="X" />
                    </children>
                </HBox>
            </top>
            <center>
                <VBox alignment="CENTER" spacing="20.0" maxWidth="600">
                    <Label text="&lt;&lt;&lt; UPDATE &gt;&gt;&gt;" textFill="#cfff04"><font><Font name="ROGFonts-Regular" size="24.0" /></font></Label>
                    <HBox spacing="10"><TextField fx:id="txtSearchId" promptText="ID to Search" styleClass="text-field-gamer" HBox.hgrow="ALWAYS"/><Button text="Search" onAction="#searchParticipant" styleClass="button-generate"/></HBox>
                    <Separator/>
                    <TextField fx:id="txtName" promptText="Name" disable="true" styleClass="text-field-gamer"/>
                    <TextField fx:id="txtEmail" promptText="Email" disable="true" styleClass="text-field-gamer"/>
                    <ComboBox fx:id="cmbGame" promptText="Game" disable="true" styleClass="combo-box-gamer" maxWidth="Infinity"/>
                    <HBox spacing="15" alignment="CENTER_RIGHT">
                        <Button text="CANCEL" onAction="#cancel" styleClass="button-exit"/>
                        <Button fx:id="btnUpdate" text="CONFIRM" onAction="#updateDetails" disable="true" styleClass="button-generate"/>
                    </HBox>
                </VBox>
            </center>
        </BorderPane>
    </children>
</StackPane>